<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_realtime"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="RoomId:" />

            <EditText
                android:id="@+id/edit_user_roomid"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="201708" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RoomType:" />
            <RadioGroup
                android:id="@+id/rgroup_roomtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/btn_roomType_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="1"/>

                <RadioButton
                    android:id="@+id/btn_roomType_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="2"/>

                <RadioButton
                    android:id="@+id/btn_roomType_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="3" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">





        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-18dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="StreamType:" />

            <RadioGroup
                android:id="@+id/rgroup_streamtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/btn_streamType_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="0" />

                <RadioButton
                    android:id="@+id/btn_streamType_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1" />

                <RadioButton
                    android:id="@+id/btn_streamType_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"/>

            </RadioGroup>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Mix:" />

            <EditText
                android:id="@+id/edit_max_mix_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="6" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:orientation="horizontal">



            <Button
                android:id="@+id/btn_enter_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EnterRoom"
                android:textAllCaps="false" />


            <Button
                android:id="@+id/btn_exit_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ExitRoom"
                android:textAllCaps="false" />
            <Button
                android:id="@+id/btn_change_roomtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="12dp"
                android:text="ChangeRoomType" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_Audio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capture" />

            <Switch
                android:id="@+id/switch_capture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send" />

            <Switch
                android:id="@+id/switch_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play" />

            <Switch
                android:id="@+id/switch_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recv" />

            <Switch
                android:id="@+id/switch_Recv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acc" />

            <Switch
                android:id="@+id/switch_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edit_song_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="song.mp3" />
            <Button
                android:id="@+id/btn_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="Qualitytips"/>
        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="MicVol:  "/>

             <SeekBar
                 android:id="@+id/seekBar_setMicVolume"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                 android:progress="0"
                android:max="200"
                />
            <TextView
                android:id="@+id/text_getMicVolume"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="0"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="VoiceType" />

             <Switch
            android:id="@+id/switch_voicetype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="SpkVol:  "/>

            <SeekBar
                android:id="@+id/seekBar_setSpeVolume"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:progress="0"
                android:max="200"
                />
            <TextView
                android:id="@+id/text_getSpeVolume"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_weight="1"
                android:text="KaKaokeType" />

            <Switch
                android:id="@+id/switch_keraoketype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Loopback:  " />
            <Switch
                android:id="@+id/switch_loopback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

             <TextView
                android:id="@+id/text_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarStyle="insideOverlay"
                android:singleLine="false"
                android:scrollbars="vertical">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_logcat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#E5111111"
        android:gravity="right"
        android:orientation="vertical"
        android:visibility="invisible">

        <Button
            android:id="@+id/btn_layout_close"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="关闭" />

        <TextView
            android:id="@+id/textview_logcat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="log"
            android:textColor="@color/colorAccent" />
    </LinearLayout>
</RelativeLayout>


